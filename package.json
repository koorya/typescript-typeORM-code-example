{
  "name": "rosnova-alert",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build:server": "rimraf dist && nest build",
    "start:server": "node dist/server/main",
    "start:bot": "ts-node --project tsconfig.json -r tsconfig-paths/register bot/index.ts",
    "start:workers": "ts-node --project tsconfig.json -r tsconfig-paths/register worker/index.ts",
    "dev:server": "nest start --watch",
    "dev:bot": "nodemon --exec 'npm run start:bot' --watch './bot'",
    "dev:update-enevts": "ts-node --project tsconfig.json -r tsconfig-paths/register scripts/updateEventManager.ts",
    "dev:send-messages": "ts-node --project tsconfig.json -r tsconfig-paths/register scripts/runSeundMessageJob.ts",
    "dev:run-event-finder": "ts-node --project tsconfig.json -r tsconfig-paths/register scripts/runEventFinder.ts",
    "dev:run-script": "ts-node --project tsconfig.json -r tsconfig-paths/register ",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "database:start": "docker-compose -f docker-compose.db.yml up",
    "database:drop": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -f orm/ormconfig.ts schema:drop",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm --config orm/ormconfig.ts",
    "migration:generate": "npm run typeorm -- migration:generate --connection  --name",
    "migration:create": "npm run typeorm -- migration:create --connection  --name",
    "migration:run": "npm run typeorm -- migration:run -t=false"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/swagger": "^5.2.1",
    "@nestjs/typeorm": "^8.0.3",
    "bull": "^4.8.2",
    "date-fns": "^2.28.0",
    "dotenv": "^16.0.0",
    "firebase": "^9.8.2",
    "firebase-admin": "^10.1.0",
    "kill-port": "^2.0.0",
    "log4js": "^6.5.2",
    "mysql2": "^2.3.3",
    "node-fetch": "^2.6.7",
    "node-firebird": "^1.0.0",
    "nodemon": "^2.0.16",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "swagger-ui-express": "^4.4.0",
    "telegraf": "^4.8.2",
    "typeorm": "^0.2.45",
    "typeorm-seeding": "^1.6.1"
  },
  "devDependencies": {
    "@bull-board/api": "^3.11.1",
    "@bull-board/express": "^3.11.1",
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/bull": "^3.15.8",
    "@types/express": "^4.17.13",
    "@types/jest": "27.4.1",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "express": "^4.18.1",
    "jest": "^27.2.5",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
